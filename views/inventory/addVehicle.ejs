<!-- The Content Heading -->
 
<% if (title) { %>
    <h1><%= title %></h1>
  <% } %>

<!-- Message Block -->

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- Adding Vehicle Form -->

<div class="form-container">
  <form id="addVehicleForm" action="/inv/addVehicle" method="POST">

    <label for="inv_make">Make:</label><br>
    <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>"
           pattern="[A-Za-z0-9\s\-]{2,}" 
           title="Only letters, numbers, hyphens, and spaces. Minimum 2 characters."><br><br>

    <label for="inv_model">Model:</label><br>
    <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>"
           pattern="[A-Za-z0-9\s\-]{2,}" 
           title="Only letters, numbers, hyphens, and spaces. Minimum 2 characters."><br><br>

    <label for="inv_year">Year:</label><br>
    <input type="number" id="inv_year" name="inv_year" required value="<%= locals.inv_year %>"
           min="1886" max="2026" 
           title="Enter a valid 4-digit year between 1886 and 2026."><br><br>

    <label for="inv_description">Description:</label><br>
    <textarea id="inv_description" name="inv_description" required minlength="10" value="<%= locals.inv_description %>"
              title="Enter a description of at least 10 characters."></textarea><br><br>

    <label for="inv_image">Image (URL):</label><br>
    <input type="url" id="inv_image" name="inv_image" required value="<%= locals.inv_image %>"
           pattern="https?://.+" 
           title="Must be a valid URL starting with http:// or https://"><br><br>

    <label for="inv_thumbnail">Thumbnail (URL):</label><br>
    <input type="url" id="inv_thumbnail" name="inv_thumbnail" required value="<%= locals.inv_thumbnail %>"
           pattern="https?://.+" 
           title="Must be a valid URL starting with http:// or https://"><br><br>

    <label for="inv_price">Price:</label><br>
    <input type="number" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>"
           min="0" step="0.01" 
           title="Enter a valid non-negative price."><br><br>

    <label for="inv_miles">Miles:</label><br>
    <input type="number" id="inv_miles" name="inv_miles" required value="<%= locals.inv_miles %>"
           min="0" 
           title="Enter a valid non-negative mileage."><br><br>

    <label for="inv_color">Color:</label><br>
    <input type="text" id="inv_color" name="inv_color" required value="<%= locals.inv_color %>"
           pattern="[A-Za-z\s]{3,}" 
           title="Only letters and spaces. Minimum 3 characters."><br><br>

    <label for="classification_id">Classification:</label><br>
    <select id="classification_id" name="classification_id" required value="<%= locals.classification_id %>"> 
      <option value="" disabled selected hidden>-- Select a classification --</option>
      <% classifications.forEach(cl => { %>
        <option value="<%= cl.classification_id %>"><%= cl.classification_name %></option>
      <% }) %>
    </select><br><br>

    <input type="submit" value="Add Vehicle">

  </form>
</div>