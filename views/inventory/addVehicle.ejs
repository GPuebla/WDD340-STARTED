<!-- The Content Heading -->
 
<% if (title) { %>
    <h1><%= title %></h1>
  <% } %>

<!-- Message Block -->

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- Adding Vehicle Form -->

<div class="form-container">
  <form id="addVehicleForm" action="/inv/addVehicle" method="POST">

    <label for="inv_make">Make:</label><br>
    <input type="text" id="inv_make" name="inv_make" required><br><br>

    <label for="inv_model">Model:</label><br>
    <input type="text" id="inv_model" name="inv_model" required><br><br>

    <label for="inv_year">Year:</label><br>
    <input type="text" id="inv_year" name="inv_year" maxlength="4" required><br><br>

    <label for="inv_description">Description:</label><br>
    <textarea id="inv_description" name="inv_description" required></textarea><br><br>

    <label for="inv_image">Image (URL):</label><br>
    <input type="text" id="inv_image" name="inv_image" required><br><br>

    <label for="inv_thumbnail">Thumbnail (URL):</label><br>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" required><br><br>

    <label for="inv_price">Price:</label><br>
    <input type="number" id="inv_price" name="inv_price" required><br><br>

    <label for="inv_miles">Miles:</label><br>
    <input type="number" id="inv_miles" name="inv_miles" required><br><br>

    <label for="inv_color">Color:</label><br>
    <input type="text" id="inv_color" name="inv_color" required><br><br>

    <label for="classification_id">Clasification:</label><br>
    <select id="classification_id" name="classification_id" required>
      <option value="" disabled selected hidden>-- Select a classification --</option>
      <% clasificaciones.forEach(cl => { %>
        <option value="<%= cl.classification_id %>"><%= cl.classification_name %></option>
      <% }) %>
    </select><br><br>

    <button type="submit" href="/inv/addVehicle">Agregar Veh√≠culo</button>
  </form>
</div>