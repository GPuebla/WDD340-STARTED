<!-- The Content Heading -->
 
<% if (title) { %>
    <h1><%= title %></h1>
  <% } %>

<!-- Message Block -->

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- Adding Classification Form -->

<div class="form-container">
    <form id="classificationForm" action="/inv/addClassification" method="POST">
        <p><em>Field is required.</em></p>
        <legend>Classification Name</legend>
        <label for="classification_name">Name</label>
        <input type="text" id="classification_name" name="classification_name" required
                pattern="^[A-Za-z\s]+$"
                title="Name must contain only alphabetic characters and spaces.">
        <small>Name must be alphabetic characters only.</small>
        <br>
        <input type="submit" value="Add Classification">
    </form>
</div>    