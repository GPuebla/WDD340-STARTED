<!-- The Content Heading -->
 
<% if (title) { %>
    <h1><%= title %></h1>
  <% } %>

<!-- Message Block -->

<%# messages() %>

<!-- Login Form -->

<form action="/login" method="POST">

    <label for="email">Email:</label><br>
    <input type="text" id="email" name="account_email" required><br><br>

    <label for="password">Password:</label><br>
    <input type="password" id="password" name="account_password" required><br><br>

    <button type="submit">LOGIN</button><br><br>

    <p>No account? <a href="/signup">Sign-up</a></p>
</form>